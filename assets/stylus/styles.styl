@import "../css/reset.css"
@import "../css/keyframes.css"
body
  margin 15px

.header
  height 820px
  background url("../images/header-background.png") center / cover no-repeat
  position relative
  .header__content
    padding-top 265px
    display flex
    flex-direction column
    align-items center
    h1
      color white
      font-family JosefinSans, sans-serif
      font-size 40pt
      font-weight 500
      letter-spacing 7px
    p
      color white
      font-size 1.3rem
      font-family Titillium Web, sans-serif
      font-weight 200
      letter-spacing 8px
    form
      position relative
      margin 0 auto
      right 75px
      .header__search__bar
        input
          width 500px
          height 60px
          font-size 17pt
          margin 50px auto 120px
          padding 5px 15px
          border none
        input::placeholder
          text-align center
          letter-spacing 3px
          font-size 10pt
          font-family Titillium Web, sans-serif
        input:focus
          outline none
      .header__submit
        input
          position absolute
          top 0
          height 60px
          width 150px
          //background-color #4A75FF
          border 2px solid white
          margin 50px auto 120px
          color white
          font-family Aleo, sans-serif
          font-size 11pt
          letter-spacing 2px
          padding-right 40px
          padding-left 16px
          background #4A75FF url("../images/search-icon.png") no-repeat 90% 50%
        input:focus
          outline none
        input:hover
          -webkit-box-shadow: inset 0 0 10px 0 rgba(255,255,255,0.86);
          box-shadow: inset 0 0 10px 0 rgba(255,255,255,0.86);
        input:focus
          outline
    .scrollDown
      display flex
      flex-direction column
      img
        display block
        align-self center
      [alt=arrow]
        align-self center
        margin-top 15px
